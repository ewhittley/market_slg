<div class="col-md-12">
  <%= form_for [@basket, @basket_item], :html => {class: "form-horizontal", role: "form"} do |f| %>
    <div class="form-group">
      <div class="row">
        <div class="control-label col-xs-4 col-xs-offset-1 col-md-2 col-md-offset-3">
          <%= f.label "Product Code", id: 'product-code' %>
        </div>
        <div class="col-xs-3 col-md-2">
          <%= f.collection_select :product_id, Product.all, :id, :code, {}, {class: "form-control", autofocus: true} %>
        </div>
        <div class="col-xs-3 col-md-2">
          <%= f.submit "Add Item", class: "btn btn-primary" %>
        </div>
      </div>
    </div>

    <div class="col-md-12">
      <% if @basket.basket_items.any? %>
        <% @basket.basket_items.each do |item| %>
          <% unless item.product.nil? %>
            <div class="row">
              <div class="col-xs-5 col-xs-offset-1 col-md-2 col-md-offset-4 text-left">
                <%= item.product.code %>
              </div>
              <div class="col-xs-5 col-md-2 text-right">
                <%= item.product.price %>
              </div>
            </div>
          <% end %>
        <% end %>
      <% else %>
        Basket is empty
      <% end %>
    </div>
  <% end %>
</div>
